# ReqSploit Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
BACKEND_HOST=0.0.0.0
BACKEND_PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/reqsploit?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Anthropic API (Claude AI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id

# Optional: Default certificate user for extension
DEFAULT_CERT_USER_ID=default

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Proxy Configuration
PROXY_PORT_START=8080
PROXY_PORT_END=8180

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/reqsploit.log
