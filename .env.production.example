# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Database
POSTGRES_DB=burponweb
POSTGRES_USER=burponweb
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Redis
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_TO_DIFFERENT_RANDOM_SECRET

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-...

# URLs (update with your domain)
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com

# Node Environment
NODE_ENV=production

# Optional: Email for Let's Encrypt SSL
LETSENCRYPT_EMAIL=admin@your-domain.com

# Optional: Domain for SSL
DOMAIN=your-domain.com

# Database Connection (automatically constructed, no need to change)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# Redis Connection (automatically constructed, no need to change)
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
